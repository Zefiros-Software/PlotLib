[
    {
        "project": "PlotLib",
        "options": {
            "HeaderOnly": false,
            "UseZPMAnaconda": true
        },
        "do":
        [
            {"language": "C++"},
            {"flags": "C++11"},
            {"export": [
                {"includedirs": "plot/include/"},
                {"flags": "C++11"}               
            ]},
            {
                "filter-options": {
                    "HeaderOnly": false
                },
                "do":
                [
                    {"kind": "StaticLib"},
                    {"defines": "PLOTLIB_NO_HEADER_ONLY"},
                    {"files": "plot/src/**.cpp" }
                ],
                "otherwise":
                [                    
                    {"kind": "Utility"},
                    {"headeronly": true}
                ]
            },
            {
                "filter-options": {
                    "UseZPMAnaconda": true
                },
                "do":
                [
                    {"export": [
                        {"defines": "PLOTLIB_USE_ZPM_ANACONDA"}
                    ]}
                ]
            }
        ]
    }
]    